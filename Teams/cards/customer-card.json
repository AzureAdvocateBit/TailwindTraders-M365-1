{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.2",
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "TextBlock",
            "size": "Medium",
            "weight": "Bolder",
            "text": "New Customer",
            "wrap": true
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "Image",
                            "style": "Person",
                            "url": "https://learntogethercrm.ngrok.io/assets/images/${if($root.gender == 'female', 'female.png', 'male.png')}",
                            "size": "Medium"
                        }
                    ],
                    "width": "auto"
                },
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "TextBlock",
                            "weight": "Bolder",
                            "text": "${$root.firstName} ${$root.lastName}",
                            "wrap": true
                        },
                        {
                            "type": "TextBlock",
                            "spacing": "None",
                            "text": "${$root.address}",
                            "isSubtle": true,
                            "wrap": true
                        },
                        {
                            "type": "TextBlock",
                            "spacing": "None",
                            "text": "${$root.city}, ${$root.state.abbreviation}",
                            "isSubtle": true,
                            "wrap": true
                        }
                    ],
                    "width": "stretch"
                }
            ]
        },
        {
            "type": "Image",
            "url": "https://dev.virtualearth.net/REST/v1/Imagery/Map/Road/${$root.latitude},${$root.longitude}/4?&pp=${$root.latitude},${$root.longitude}&key=At1jz5shJJehBl94CpvgIIdaqVGcpOGfpkpU2nU4rRl3sV1MxWVMVYX92kXoLg5i",
            "width": "200px",
            "height": "200px"
        },
        {
            "type": "TextBlock",
            "text": "Sales Person: ${$root.salesPerson}",
            "weight": "Bolder",
            "wrap": true
        }
    ],
    "actions": [
        {
            "type": "Action.OpenUrl",
            "title": "Customer Details",
            "url": "https://learntogethercrm.ngrok.io/customers/${$root.id}/details"
        }
    ]
}